@model BankSystem.ViewModels.CountryBalanceViewModel

<div class="col-12 col-md-6 col-lg-5 mb-4">
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">

            <span class="flag-container">
                <span class="fi fi-@Model.CountryCode"></span>
            </span>

            <div class="text-right">
                <p class="mb-1 text-muted">@Model.Country</p>
                <h5 class="mb-0">@Model.TotalBalance.ToString("N0")</h5>
            </div>

        </div>
    </div>
</div>